<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jt3282.lifego.com.lifegofood.jt3282.lifego.GMActivity"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="營業中"
                android:textColor="@color/colorBlack"
                android:background="@color/colorGray"
                android:textSize="20dp" />

            <com.lifegofood.jt3282.lifego.food.MyListView
                android:id="@+id/lv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.lifegofood.jt3282.lifego.food.MyListView>

            <TextView
                android:text="沒有更多了"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:background="@color/colorGray"
                android:text="休息中"
                android:textSize="20dp" />

            <com.lifegofood.jt3282.lifego.food.MyListView
                android:id="@+id/lv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.lifegofood.jt3282.lifego.food.MyListView>

            <TextView
                android:text="沒有更多了"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </ScrollView>
</LinearLayout>
