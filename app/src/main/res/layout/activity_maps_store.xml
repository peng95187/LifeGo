<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/mylocation"
                    android:text="You"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="225dp"
                    android:background="@drawable/stop_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <Button
                    android:id="@+id/destiny"
                    android:text="目的地"
                    android:textSize="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="285dp"
                    android:background="@drawable/stop_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    tools:context="com.example.jt3282.lifego.com.lifegofood.jt3282.lifego.MapsStore" />

            </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stname"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="店名 : "
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/staddress"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="地址 : "
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/stphone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="聯絡電話 : "
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="營業時段 : "
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/stopen"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="11:00"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Google 評分 : "
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RatingBar
                android:id="@+id/ratBar1"
                android:rating="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
