<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btn_return"
            android:text="返回"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tv_mail1"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:gravity="bottom"
            android:text="帳號: (信箱)"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_mail"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@id/tv_mail1"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_below="@id/et_mail"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:gravity="bottom"
            android:text="暱稱 :"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip" />

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_below="@id/et_name"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:gravity="bottom"
            android:text="密碼: (8-20字元)"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@id/tv_pass"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:maxLines="200"
            android:password="true"
            android:scrollHorizontally="true" />

        <TextView
            android:id="@+id/tv_pass_re"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_below="@id/et_pass"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:gravity="bottom"
            android:text="確認密碼:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_pass_re"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_below="@id/tv_pass_re"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:maxLines="200"
            android:password="true"
            android:scrollHorizontally="true" />

        <CheckBox
            android:id="@+id/cb_register_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_below="@id/et_pass_re"
            android:text="顯示密碼"
            android:textColor="#000000" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_rgt"
        android:layout_width="80dip"
        android:layout_height="45dip"
        android:layout_marginTop="20dip"
        android:text="註冊"
        android:textColor="#000000"
        android:textSize="18sp"/>

</LinearLayout>
